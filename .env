APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:5000

DB_HOST=
DB_PORT=
DB_NAME=webapp
DB_USER=
DB_PASS=

# SQLite fallback path for development/testing
DB_SQLITE_PATH=/home/runner/.webapp/db/webapp.sqlite

JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ISSUER=webapp
JWT_TTL=604800

CSRF_TTL=7200
CSRF_COOKIE_NAME=CSRF-TOKEN
CSRF_COOKIE_SIGNED=CSRF-TOKEN-SIGNED
CSRF_HEADER=X-CSRF-Token
CSRF_SECRET=your-csrf-secret-key-change-in-production

RATE_LIMIT_MUTATION_WINDOW=60
RATE_LIMIT_MUTATION_MAX=60
RATE_LIMIT_LOGIN_WINDOW=60
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_REGISTER_WINDOW=60
RATE_LIMIT_REGISTER_MAX=10
